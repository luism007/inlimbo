{
    "AWSEBDockerrunVersion": "3",
    "Authentication": {
        "Bucket": "inlimbo-config",
        "Key": ".dockercfg"
    },
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "luism007/inlimbo-docker:inlimbo-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 80
                }
            ],
            "links": ["client", "api"],
            "memory": 200
        },
        {
            "name": "client",
            "image": "luism007/inlimbo-docker:inlimbo-frontend",
            "hostname": "client",
            "environment": [
                {
                    "name": "WDS_SOCKET_PORT",
                    "value": 0
                }
            ],
            "essential": true,
            "memory": 200
        },
        {
            "name": "api",
            "image": "luism007/inlimbo-docker:inlimbo-backend",
            "hostname": "api",
            "environment": [
                {
                    "name": "MONGO_USERNAME",
                    "value": "test-user"
                },
                {
                    "name": "MONGO_PASSWORD",
                    "value": "test-1996"
                },
                {
                    "name": "MONGO_DB_NAME",
                    "value": "inlimbo-photography"
                },
                {
                    "name": "SERVER_PORT",
                    "value": 3001
                }
            ],
            "essential": true,
            "memory": 400
        }
    ]
}